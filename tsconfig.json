{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            //create alias in babel config also
            "@Component/*": ["components/*"],
            "@Api/*": ["api/*"],
            "@Page/*": ["pages/*"],
            "@Styles/*": ["/styles"],
            "@Test/*": ["test/*"],
            "@Redux/*": ["/redux/*"],
            "@List/*": ["Lists/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "__tests__/pageTest/profile.js",
        "__tests__/test-utils.ts"
    ],
    "exclude": ["node_modules"]
}
